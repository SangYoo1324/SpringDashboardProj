<!doctype html>
<html lang="En">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/bootstrap.css">
    <link rel="stylesheet" href="/bootstrap.min.css">


    <script src="https://kit.fontawesome.com/edff7358ca.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style.css">
    <title>document</title>
</head>
<body>
{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    <tr>
<!--모델에 등록된 attribute을 가져올때-->
        {{#article}}
        <th scope="row">{{ id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
            {{/article}}
                </tbody>
</table>
<a href="/articles/{{article.id}}/edit" class="btn btn-primary"> Edit</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger"> Delete</a>
<a href="/articles" class="btn btn-secondary "> Go to Article List</a>

<!--comment-->
<!--새 댓글 목록-->
<h2 class="mt-2 text-info">Comments</h2>
<hr>
<div class="comments-list">
    {{#commentsDtos}}
        <div class="card m-2" id="comments-{{id}}">
            <div class="card-header">{{nickname}}
<!--                modal 트리거 버튼(edit)-->
                <button type="button" class="btn btn-sm btn-outline-primary
                 margin-left" data-bs-toggle="modal"
                        data-bs-id = "{{id}}"
                        data-bs-nickname = "{{nickname}}"
                        data-bs-body="{{body}}"
                        data-bs-articleId = "{{articleId}}";
                        data-bs-target="#comment-edit-modal">
                    Edit
                </button>
                <!--                modal 트리거 버튼(edit)-->
<!--                삭제 버튼-->
                <button type="button" class="btn btn-sm btn-outline-danger delete-btn"
                data-comments-id="{{id}}">Delete</button>
            </div>
            <div class="card-body">{{body}}</div>

        </div>
    {{/commentsDtos}}
    <!--새 댓글 목록-->

    <!--새 댓글작성-->
    <div class="card m-2" id = "comments-new">
        <div class="card-body">
            <form action="">
                <div class="mb-3">
                    <label class="form-label">Nickname</label>
                    <input class="form-control form-control-sm" id="new-comment-nickname">

                </div>
                <div class="mb-3">
                    <label class="form-label">Content</label>
                    <textarea class="form-control form-control=sm" id="new-comment-body" rows="5"></textarea>

                </div>
                {{#article}}
                    <input type="hidden" id="new-comment-articleId" value="{{id}}">
                {{/article}}

                <button type="button" class="btn btn-outline-primary btn-sm margin-left-2"
                        id="comment-create-btn">Submit</button>
            </form>
        </div>
    </div>

</div>

<div class="test">Test CSS</div>>
<!--새 댓글작성-->

<!--Modal-->
<!-- Modal -->
<div class="modal fade" id="comment-edit-modal" tabindex="-1" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close margin-right"
                        data-bs-dismiss="modal" aria-label="Close" id="margin-left">

                </button>
            </div>
            <div class="modal-body">
                <!--                댓글 수정 폼(update data)-->
                <form action="">
                    <div class="mb-3">
                        <label class="form-label">Nickname</label>
                        <input class="form-control form-control-sm" id="edit-comment-nickname">

                    </div>
                    <div class="mb-3">
                        <label class="form-label">Content</label>
                        <textarea class="form-control form-control=sm" id="edit-comment-body" rows="5"></textarea>

                    </div>
                    {{#article}}
                        <input type="hidden" id="edit-comment-id">
                        <input type="hidden" id="edit-comment-articleId" value="{{id}}">
                    {{/article}}

                    <button type="button" class="btn btn-outline-primary btn-sm" id="comment-update-btn">Submit</button>
                </form>
                <!--                댓글 수정 폼-->
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

